#!/bin/sh

menu=$(echo "qutebrowser\ncopy to clipboard\nplay" | dmenu -p browser)

case $menu in
    "qutebrowser")
        qutebrowser "$@" &
        ;;
    "disposable without network")
        firewarden -n qutebrowser "$@" &
        ;;
    "disposable")
        firewarden qutebrowser "$@" &
        ;;
    "tor browser")
        tor-browser-en "$@" &
        ;;
    "personal")
        qutebrowser-personal "$@" &
        ;;
    "work")
        qutebrowser-work "$@" &
        ;;
    "shopping")
        qutebrowser-shopping "$@" &
        ;;
    "copy to clipboard")
        echo "$@" | wl-copy
        ;;
    "play")
        mpv "$@" &
        ;;
esac
