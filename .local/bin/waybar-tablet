#!/bin/sh

marker="$HOME/.cache/waybar-tablet"

show() {
    if [ -e "$marker" ]; then
        printf '{"text": "  ", "class": "on"}\n'
    else
        printf '{"text": "  ", "class": "off"}\n'
    fi
}

toggle() {
    if [ -e "$marker" ]; then
        swaymsg output eDP-1 transform 0
        rm -f "$marker"
    else
        swaymsg output eDP-1 transform 180
        touch "$marker"
    fi
    pkill -RTMIN+4 -x waybar
}

[ $# -gt 0 ] && toggle || show
