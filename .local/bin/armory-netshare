#!/bin/bash

echo -e "bring usb interface up"
/sbin/ip link set usb0 up

echo -e "set source nat roule"
#/sbin/iptables -t nat -A POSTROUTING -s 10.0.0.1/32 -o wlan0 -j MASQUERADE
#/sbin/iptables -I INPUT -p udp --dport 53 -s 10.0.0.1/32 -j ACCEPT
#/sbin/iptables -I INPUT -p tcp --dport 53 -s 10.0.0.1/32 -j ACCEPT

echo -e "activate forwarding"
echo "1" | tee /proc/sys/net/ipv4/ip_forward


iptables -t nat -A POSTROUTING -s 10.0.0.1/32 -o wlan0 -j MASQUERADE
iptables -A FORWARD -i usb0 -o wlan0 -m state --state RELATED,ESTABLISHED -j ACCEPT
iptables -A FORWARD -i wlan0 -o usb0 -j ACCEPT  

exit $exitcode
